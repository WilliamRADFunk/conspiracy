<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/commentsNumber">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:src="@drawable/placeholder"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title of Conspiracy"
        android:id="@+id/feedsTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Author:"
        android:id="@+id/authorText"
        android:layout_below="@+id/feedsTitle"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Conspirators:"
        android:id="@+id/conspiratorText"
        android:layout_below="@+id/authorText"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="50"
        android:id="@+id/conspiratorNumber"
        android:layout_below="@+id/authorText"
        android:layout_toRightOf="@+id/conspiratorText"
        android:layout_toEndOf="@+id/conspiratorText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comments:"
        android:id="@+id/commentsText"
        android:layout_alignTop="@+id/conspiratorNumber"
        android:layout_toRightOf="@+id/conspiratorNumber"
        android:layout_toEndOf="@+id/conspiratorNumber"
        android:paddingStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="100"
        android:id="@+id/textView6"
        android:layout_below="@+id/authorText"
        android:layout_toRightOf="@+id/feedsTitle"
        android:layout_toEndOf="@+id/feedsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Evan Glazer"
        android:id="@+id/authorName"
        android:layout_above="@+id/conspiratorText"
        android:layout_toRightOf="@+id/authorText"
        android:layout_toEndOf="@+id/authorText"
        android:paddingStart="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Most Popular Cabal Today!"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/conspiratorText"
        android:layout_alignStart="@+id/conspiratorText"
        android:singleLine="true"
        android:textColor="#ff0000" />
</RelativeLayout>